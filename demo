            // 31)-------------
            function numberFunction()
            {
                let n1 = parseInt(document.getElementById("num1").value);
                let n2 = parseInt(document.getElementById("num2").value);
                let n3 = parseInt(document.getElementById("num3").value);
                let num = "";
                if(n1 >= n2 &&  n1 >= n3)
                {
                    num = "n1 is larger";
                }
                else if(n2 >= n3){
                    num = "n2 is larger"
                }
                else{
                    num = "n3 is larder";
                }
                document.getElementById("demo").innerHTML = "largest number is = " + num;
            }

            // 33)------------------

            function number1Function()
            {
                let n4 = parseInt(document.getElementById("num4").value);
                let n5 = parseInt(document.getElementById("num5").value);
                let sum = "";
                if((n4 >= 40 && n4 <= 60 && n5 >= 40 && n5 <= 60) || (n4 >= 70 && n4 <= 100 && n5 >= 70 && n5 <= 100))
                {
                    sum = "true";
                } 
                else{
                    sum = "false";
                }
                document.getElementById("demo1").innerHTML = sum;
            }

            // 34)---------------------

            function number2Function()
            {
                let n6 = parseInt(document.getElementById("num6").value);
                let n7 = parseInt(document.getElementById("num7").value);
                let sum1 = "";
                if(n6 >= 40 && n6 <= 60 && n7 >= 40 && n7 <= 60)
                {
                    if(n6 === n7 )
                    {
                        sum1 = "number are same";
                    }
                    else if(n6 > n7){
                        sum1 = "n6 is max";
                    }
                    else{
                        sum1 = "n7 is max";
                    }

                }
                else
                {
                    sum1 = "not available";
                }
                document.getElementById("demo2").innerHTML = sum1;

            }

